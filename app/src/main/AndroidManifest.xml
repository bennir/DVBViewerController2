<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="de.bennir.dvbviewercontroller2" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-sdk tools:node="replace" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/dvbviewer_controller"
        android:label="@string/app_name"
        android:theme="@style/BaseAppTheme" >
        <activity
            android:name=".ui.NsdActivity"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ControllerActivity"
            android:label="@string/title_activity_controller" >
        </activity>
        <activity
            android:name=".ui.ChannelDetailActivity"
            android:label="@string/title_activity_channel_detail"
            android:parentActivityName=".ui.ControllerActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.bennir.dvbviewercontroller2.ui.ControllerActivity" />
        </activity>
    </application>

</manifest>
